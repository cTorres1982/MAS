@model IEnumerable<BackendProxy.DTOs.EmployeeDTO>

@{
    ViewData["Title"] = "Employees";
}
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function(){
            $('#employeeIdBtn').click(function () {
                var url = '@Url.Action("Index", "Employees")';
                var textValue = $('#employeeId').val();

                window.location.href = url + '?id=' + textValue;
            });
        })

    </script>
}
<p>
    <input type="text" id="employeeId" name="employeeId" value="" />
    <a href="#" class="btn btn-primary" id="employeeIdBtn">Search</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnualSalary)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnualSalary)
            </td>
        </tr>
        }
    </tbody>
</table>